<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:DebugAgentPrototype.ViewModels"
             x:Class="DebugAgentPrototype.Views.LldbOutputView"
             x:DataType="vm:LldbOutputViewModel">
    <UserControl.Styles>

    </UserControl.Styles>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   Text="LLDB Output" 
                   FontWeight="Bold" 
                   FontSize="14" 
                   Margin="10,10,10,10"/>
        <Border Grid.Row="1" 
                Background="Black"
                BorderThickness="0"
                Margin="10,0,10,10">
            <ScrollViewer x:Name="LldbOutputScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="LldbOutputBox"
                         Text="{Binding LldbOutput, Mode=OneWay}" 
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas, Courier New, monospace"
                         Foreground="LightGreen"
                         Background="Black"
                         BorderThickness="0"
                         Focusable="False"/>
            </ScrollViewer>
        </Border>
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     x:Name="LldbInputBox"
                     Text="{Binding LldbInput, Mode=TwoWay}" 
                     Watermark="Enter lldb command..."
                     Margin="0,0,10,0"
                     FontFamily="Consolas, Courier New, monospace"
                     KeyDown="OnLldbInputKeyDown"/>
            <Button Grid.Column="1" 
                    Content="Send" 
                    Command="{Binding SendLldbCommand}"
                    MinWidth="80"/>
        </Grid>
    </Grid>
</UserControl>

